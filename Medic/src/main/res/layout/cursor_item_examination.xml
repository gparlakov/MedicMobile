<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cursor_item_patients"
    android:background="#777777">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cursor_item_examination_date"
        android:layout_marginLeft="@dimen/textView_horizontalMargin"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cursor_item_examination_patientFullName"
        android:layout_marginLeft="@dimen/textView_horizontalMargin"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cursor_item_examination_complaints"
        android:layout_marginLeft="@dimen/textView_horizontalMargin"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</LinearLayout>