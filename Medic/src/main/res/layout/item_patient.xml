<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/patients_list_item_dimen"
        android:layout_height="@dimen/patients_list_item_dimen"
        android:id="@+id/listItemPatientImage"
        android:contentDescription="@string/contentDescription_patientImage"
        android:layout_marginRight="@dimen/patients_list_item_picture_horizontal_margin"
        android:layout_marginLeft="@dimen/patients_list_item_picture_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/listItemPatientFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/patients_list_item_picture_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/listItemPatientLastName" />
</LinearLayout>